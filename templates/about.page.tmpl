{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>About</h1>
                <p>This is the data passed: {{index .StringMap "test"}}</p>

                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is {{index .StringMap "remote_ip"}}
                    {{else}}
                        Remote IP unknown. Visit <a href="/">Home page</a>
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}